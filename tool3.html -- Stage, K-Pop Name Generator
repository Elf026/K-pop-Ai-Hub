<script>
const bank = {
  Bold: ["JIN","KIX","RYU","MAX","NOVA","ZEK","LEX","JAX","ROK","KYO","RIK","ZIN"],
  Soft: ["Mina","Yuna","Sori","Hani","Ari","Nari","Lumi","Dami","Sena","Yeri","Mori","Nami"],
  Mystic: ["Aura","Lune","Nyx","Eve","Vela","Kira","Sora","Iris","Vivi","Lira","Nari","Nova"],
  Retro: ["Bibi","Dodo","Kiki","Lulu","Momo","Rara","Coco","Gigi","Nini","Zizi","Pipi","Riri"],
  Futuristic: ["Vex","Cyra","Kairo","Zetta","Aero","Vanta","Neon","Flux","Voxa","Quin","Kova","Xylo"]
};
$("#run").addEventListener("click", () => {
  const vibe = $("#vibe").value;
  const syll = parseInt($("#syll").value, 10);
  const start = ($("#start").value || "").toLowerCase();
  const rnd = seeded(vibe + "|" + syll + "|" + start);
  const out = [];
  while (out.length < 5) {
    const base = bank[vibe][Math.floor(rnd()*bank[vibe].length)];
    let name = base;
    // Add or split for syllables
    if (syll === 2 && base.length <= 3) name = base + (rnd()>.5?"a":"i");
    if (syll === 3) name = base + (rnd()>.5?"-ri":"-na");
    if (start && name[0].toLowerCase() !== start) continue;
    if (!out.includes(name)) out.push(name);
  }
  $("#out").textContent = out.join("\n");
});
</script>
