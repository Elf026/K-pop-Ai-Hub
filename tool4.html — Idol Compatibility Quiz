<script>
$("#run").addEventListener("click", () => {
  const seed = seeded($("#idol").value + "|" + $("#vibe").value + "|" + $("#plan").value + "|" + $("#concept").value);
  const score = Math.floor(seed()*41) + 60; // 60 to 100
  const tips = [
    "Share playlists.",
    "Learn a chorus.",
    "Try a dance challenge.",
    "Support with kind comments."
  ];
  const tip = tips[Math.floor(seed()*tips.length)];
  $("#out").textContent = `Compatibility: ${score}%\nTip: ${tip}`;
});
</script>
