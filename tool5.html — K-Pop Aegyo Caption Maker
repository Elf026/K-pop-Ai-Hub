<script>
$("#run").addEventListener("click", () => {
  const lvl = $("#level").value;
  const t = $("#topic").value || "selca";
  const useEmj = $("#emj").value === "Yes";
  const seed = seeded(lvl + "|" + t + "|" + useEmj);
  const ends = ["day","time","mood","vibes","magic","moment"];
  const pick = () => ends[Math.floor(seed()*ends.length)];
  const em = useEmj ? ["âœ¨","ðŸ’—","ðŸŽ€","ðŸŒ¸","ðŸ«¶","ðŸ’«"] : [""];
  const e = () => em[Math.floor(seed()*em.length)];
  const cute = {
    Low:    ["soft","sweet","fresh","clean","bright","calm"],
    Medium: ["cute","fluffy","sparkly","pink","uwu","blush"],
    High:   ["aegyo overload","squishy","mochi","nyan nyan","kya","bbuing"]
  }[lvl];

  const out = [];
  for (let i=0;i<6;i++){
    out.push(`${t} ${cute[Math.floor(seed()*cute.length)]} ${pick()} ${e()}`.trim());
  }
  $("#out").textContent = out.join("\n");
});
</script>
