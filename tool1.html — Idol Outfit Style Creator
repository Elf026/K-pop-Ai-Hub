        <option>Retro</option>
      </select>

      <label class="label">Main colors, comma separated</label>
      <input class="input" id="colors" placeholder="black, pink, silver" />

      <label class="label">Items you own</label>
      <textarea id="items" placeholder="crop jacket, pleated skirt, boots"></textarea>

      <div class="actions">
        <button class="btn" id="run">Create outfit</button>
        <button class="btn" id="copy" type="button" onclick="copyText('out')">Copy</button>
