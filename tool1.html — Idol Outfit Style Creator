<script>
document.getElementById("run").addEventListener("click", () => {
  const vibe = $("#vibe").value;
  const colors = $("#colors").value.split(",").map(s => s.trim()).filter(Boolean);
  const items = $("#items").value.split(",").map(s => s.trim()).filter(Boolean);
  const add = (arr, n, seed) => {
    const r = [];
    while (r.length < n && arr.length) {
      const i = Math.floor(seed()*arr.length);
      r.push(arr.splice(i,1)[0]);
    }
    return r;
  };
  const seed = seeded([vibe, colors.join("-"), items.join("-")].join("|"));
  const accents = ["pearl choker","charm bracelet","layered chains","bow hairpin","beret","arm warmers","mesh socks","knee socks","cap","fingerless gloves","waist chain","ribbon belt"];
  const shoes  = ["platform boots","mary janes","sneakers","knee boots","ankle boots","loafer heels"];
  const tops   = ["cropped blazer","graphic tee","sparkle cardigan","corset top","ruffle blouse","hoodie","mesh top"];
  const bottoms= ["pleated skirt","skort","cargo pants","wide jeans","tennis skirt","mini skirt","tailored shorts"];

  const pickAcc = add([...accents], 3, seed);
  const pickTop = add([...tops], 1, seed);
  const pickBot = add([...bottoms], 1, seed);
  const pickSho = add([...shoes], 1, seed);

  const palette = colors.length ? colors : ["black","white","pink"];

  const lines = [
    `Vibe: ${vibe}`,
    `Palette: ${palette.join(", ")}`,
    `Top: ${pickTop[0]}`,
    `Bottom: ${pickBot[0]}`,
    `Shoes: ${pickSho[0]}`,
    `Accessories: ${pickAcc.join(", ")}`,
    items.length ? `Use from your closet: ${items.join(", ")}` : `Closet tip: add one metallic piece`
  ];
  $("#out").textContent = lines.join("\n");
});
</script>
