<script>
const pool = {
  "Hype|4th Gen": ["NewJeans - Super Shy","LE SSERAFIM - ANTIFRAGILE","ITZY - LOCO","Aespa - Next Level","Stray Kids - God's Menu","TXT - Good Boy Gone Bad","IVE - I AM","ATEEZ - BOUNCY","(G)I-DLE - Nxde","ENHYPEN - Drunk-Dazed"],
  "Chill|4th Gen": ["NewJeans - Ditto","TXT - Blue Hour","Aespa - Life's Too Short","STAYC - ASAP","IVE - After LIKE","Treasure - Darari","XG - Left Right","Fromis_9 - DM","Kep1er - Wing Wing","NMIXX - Love Me Like This"],
  "Romantic|4th Gen": ["NewJeans - OMG","TXT - CROWN","Aespa - Forever","STAYC - Teddy Bear","IVE - Love Dive","Stray Kids - 24 to 25","(G)I-DLE - HWAA","ENHYPEN - Polaroid Love","IVE - Eleven","XG - Shooting Star"],
  "Dark|4th Gen": ["Aespa - Savage","LE SSERAFIM - UNFORGIVEN","Stray Kids - VENOM","TXT - PUMA","ATEEZ - Wonderland","ITZY - Not Shy","(G)I-DLE - TOMBOY","ENHYPEN - Given-Taken","XG - Mascara","NMIXX - DICE"],
  "Hype|Mixed": ["BIGBANG - BANG BANG BANG","EXO - Monster","BTS - Fire","BLACKPINK - DDU-DU DDU-DU","SEVENTEEN - HIT","TWICE - Feel Special","ATEEZ - Wonderland","TXT - Chasing That Feeling","ITZY - Sneakers","NewJeans - ETA"]
};
$("#run").addEventListener("click", () => {
  const key = `${$("#mood").value}|${$("#era").value}`;
  const list = pool[key] || pool["Hype|Mixed"];
  const must = $("#must").value.trim().toLowerCase();
  const rng = seeded(key + "|" + must);
  // Shuffle
  const picks = [...list].sort(()=>rng()-.5).slice(0,10);
  if (must) {
    const hit = list.find(t => t.toLowerCase().includes(must));
    if (hit && !picks.includes(hit)) picks[0] = hit;
  }
  $("#out").textContent = picks.map((t,i)=>`${i+1}. ${t}`).join("\n");
});
</script>
