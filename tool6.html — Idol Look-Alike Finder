<script>
$("#run").addEventListener("click", () => {
  const s = $("#shape").value + "|" + $("#features").value + "|" + $("#hair").value;
  const r = seeded(s);
  const idols = [
    "Jungkook","V","Jimin","Jin","RM","Suga","J-Hope",
    "Jennie","Jisoo","Lisa","Ros√©",
    "Karina","Winter","Hanni","Minji","Haerin","Danielle",
    "Cha Eun-woo","Taeyeon","IU","Sana","Momo","Tzuyu",
    "Chaeryeong","Yeji","Ryujin","Yuna"
  ];
  const picks = new Set();
  while (picks.size < 3) picks.add(idols[Math.floor(r()*idols.length)]);
  $("#out").textContent = Array.from(picks).map((n,i)=>`${i+1}. ${n}`).join("\n");
});
</script>
